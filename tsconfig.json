{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "*": ["src/*"]
        },
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules"]
}
